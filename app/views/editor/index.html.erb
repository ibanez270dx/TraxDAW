<div id="page">
  <h1 class="title">HTML5 Web Audio Recording</h1>

  <div data-editor>
    <nav>
      <div class="microphone">
        <i class="icon-microphone inset"></i>
        <button id="mic-start">Activate</button>
        <button id="mic-stop">Deactivate</button>
        <canvas id="live-waveform" width="100" height="35"></canvas>
        <div id="live-waveform-glass"></div>
      </div>
      <div class="record disabled">
        <i class="icon-circle inset"></i>
        <button id="rec-start">Start</button>
        <button id="rec-stop">Stop</button>
      </div>
      <div class="playback disabled">
        <i class="icon-play inset"></i>
        <button id="play-start">Start</button>
        <button id="play-stop">Stop</button>
      </div>
    </nav>


    <section id="workspace">

      <table id="tracks">
        <tbody>
          <% ['blue','orange'].each_with_index do |color, i| %>
            <% i=i+1 %>
            <tr data-track-id="<%= i %>" class="track <%= color %>">
              <td class="controls">
                <div class="panel">
                  <span class="title">Track <%= i %></span>
                  <div class="nodes">
                    <label>Gain:</label><input name="track-<%= i %>-gain" type="number" /> 
                  </div>
                  <div class="switches">
                    <a data-mute>Mute</a>
                  </div>
                </div>
              </td>
              <td class="canvases">
                <canvas class="wave" height="100"></canvas>
                <canvas class="background" height="100"></canvas>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <table id="canvas-layer">
        <tbody>
          <tr>
            <td class="controls"></td>
            <td class="canvases">
              <canvas id="grid"></canvas>
            </td>
          </tr>
        </tbody>
      </table>

      <div id="lower-controls">
        <a data-add-track><i class="fa fa-plus-square"></i>Add Track</a>
      </div>
    </section>
  </div>
</div>